{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Juego",
      "type": "shell",
      "command": "C:/msys64/mingw64/bin/g++.exe",
      "args": [
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "-o",
        "${workspaceFolder}/bin/Juego.exe",
        "-IC:/msys64/mingw64/include",
        "-LC:/msys64/mingw64/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
